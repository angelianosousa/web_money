<% flash.each do |type, message| %>
  <%= javascript_tag do %>
    <% type = 'danger' if type == 'alert' %>
    <% type = 'success' if type == 'notice' %>

    <% if flash.key?('notice') || flash.key?('alert') %>
      showFlashNotification("<%= type %>", "<%= message %>");
    <% else %>
      showFlashNotification("<%= type %>", "<%= message.join(', ') %>");
    <% end %>
  <% end %>
<% end %>
