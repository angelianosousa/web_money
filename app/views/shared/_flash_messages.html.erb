<% flash.each do |flash_type, message| %>
  <%= javascript_tag do %>
    <% if flash_type == 'danger' || flash_type == 'alert' %>
      <% message.each do |msg| %>
        showFlashNotification("danger", "<%= msg %>");
      <% end %>
    <% else %>
      showFlashNotification("<%= flash_type %>", "<%= message %>");
    <% end %>
  <% end %>
<% end %>
