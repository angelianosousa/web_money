<% flash.each do |flash_type, message| %>
  <% if flash_type == 'danger' %>
    <% message.each do |msg| %>
      <%= javascript_tag do %>
        showFlashNotification("<%= flash_type %>", "<%= msg %>");
      <% end %>
    <% end %>
  <% else %>
    <%= javascript_tag do %>
      showFlashNotification("<%= flash_type %>", "<%= message %>");
    <% end %>
  <% end %>
<% end %>