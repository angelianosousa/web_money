<nav class="navbar navbar-light navbar-filter">
  <%= search_form_for @q, url: bills_path, html: { class: 'form-row my-2', style:'padding: 15px 10px;' } do |f| %>
    <div class='mx-2'>
      <div class='form-group col-md-2'>
        <%= f.label :bill_type_eq, t('.bill_type'), class: 'label-control' %>
        <%= f.select :bill_type_eq, Bill.bill_types.keys, 
                                    { include_blank: 'All' },
                                    { data: { style: 'btn btn-link' },  class: 'custom-select' } %>
      </div>

      <div class='form-group col-md-2'>
        <%= f.label :status_eq, t('.status'), class:'label-control' %>
        <%= f.select :status_eq, Bill.statuses.keys,
                                { include_blank: 'All' },
                                { data: { style: 'btn btn-link' },  class: 'custom-select' } %>
      </div>

      <div class='form-group col-md-1'>
        <%= f.label :price_cents, t('.price_cents'), class:'label-control' %>
        <%= f.number_field :price_cents_gteq, class:'form-control', in:0..999999, placeholder: 'Min' %>
      </div>

      <div class='form-group col-md-1'>
        <%= f.number_field :price_cents_lteq, class:'form-control', in:0..999999, placeholder: 'Max', style:'margin-top: 25px;' %>
      </div>

      <div class='form-group col-md-2'>
        <%= f.label :due_pay, t('.due_pay'), class:'label-control' %>
        <%= f.date_field :due_pay_gteq, class:'form-control' %>
      </div>

      <div class='form-group col-md-2'>
        <%= f.date_field :due_pay_lteq, class:'form-control', style:'margin-top: 25px;' %>
      </div>
      
      <div class='form-group col-md-2 d-flex'>
        <%= f.submit t('search'), class:'btn btn-outline-dark btn-round btn-sm px-5 mt-4' %>
        <%= link_to t('clear'), bills_path, class:'btn btn-outline-secondary btn-round btn-sm px-5 mt-4' %>
      </div>
    </div>
  <% end %>
</nav>
<br>