<div class="jumbotron py-5">
  <div class='row'>
    <div class='col-8'>
      <div class='d-flex flex-column'>
        <span class='d-flex align-items-center'>
          <%= bill_type_status(@bill.bill_type) %>
          <h4 class='ml-2'><%= t '.title', bill: @bill.title %> </h4>
        </span>

        <p style='font-size: 15px;'><strong><%= Bill.human_attribute_name :price_cents %></strong>: <%= humanized_money_with_symbol @bill.price_cents %></p>
        <p style='font-size: 15px;'><strong><%= Bill.human_attribute_name :due_pay %></strong>: <%= l @bill.due_pay, format: :short %></p>
      </div>
    </div>

    <div class='col'>
      <h3><%= bill_payment @bill.status, font_size: '20px' %></h3>

      <div class='d-flex flex-row'>
        <%= link_to '', edit_bill_path(@bill), class:'btn btn-info fa fa-edit' %>
        <%= link_to '', bills_path, class:'btn btn-secondary fa fa-arrow-left' %>
      </div>
    </div>
  </div>

</div>
<br>

<div class='container'>
  <div class='card border-dark'>
    <div class='card-header'>
      <h3 class='mt-3'><%= t '.balance', balance: humanized_money_with_symbol(@transactions.sum(:price_cents)) %></h3>
    </div>

    <div class='card-body table-responsive'>
      <table class='table table-hover table-borderless'>
        <thead class='background-finances-green'>
          <th><%= Transaction.human_attribute_name :account_id %></th>
          <th><%= Transaction.human_attribute_name :category_id %></th>
          <th><%= Transaction.human_attribute_name :price_cents %></th>
          <th><%= Transaction.human_attribute_name :date %></th>
          <th><%= Transaction.human_attribute_name :description %></th>
        </thead>
        <% @transactions.each do |transaction| %>
          <tbody class='border-bottom'>
            <tr>
              <td><%= transaction.account.title %></td>
              <td><%= transaction.category.title %></td>
              <td><%= value_style transaction %></td>
              <td><%= transaction.date %></td>
              <td><%= transaction.description %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
    <div class='container-fluid'>
      <%= paginate @transactions %>
    </div>
  </div>

</div>
<br>
