<div class='container'>
  <div class='card'>
    <div class='card-header'>
      <div class='float-left'>
        <h3><%= t '.title', bill: @bill.title %></h3>
      </div>

      <div class='float-right'>
        <h3><%= bill_payment @bill.status, font_size: '25px' %> <%= bill_due_status @bill, font_size: '25px' %></h3>
      </div>
    </div>
    <div class='card-body'>
      <div class='row'>
        <div class='col-sm'>
          <p><strong><%= Bill.human_attribute_name :price_cents %></strong> <%= @bill.price_cents %></p>
        </div>

        <div class='col-sm'>
          <p><strong><%= Bill.human_attribute_name :due_pay %></strong> <%= @bill.due_pay %></p>
        </div>
      </div>

      <div class='row'>
        <div class='col-sm'>
          <p><strong><%= Bill.human_attribute_name :bill_type %></strong> <%= @bill.bill_type %><p>
        </div>

        <div class='col-sm'>
          <p><strong><%= Bill.human_attribute_name :status %></strong> <%= @bill.status %></p>
        </div>
      </div>
    </div>
  </div>
  <div class='card-footer'>
    <%= link_to '', edit_bill_path(@bill), class:'btn btn-info fa fa-edit' %>
    <%= link_to '', bills_path, class:'btn btn-secondary fa fa-arrow-left' %>
  </div>
</div>
<br>

<div class='container'>
  <div class='card border-dark'>
    <div class='card-header'>
      <h3 class='mt-3'><%= t '.balance', balance: humanized_money_with_symbol(@transactions.sum(:price_cents)) %></h3>
    </div>
    <div class='card-body'>
      <table class='table table-hover table-borderless'>
        <thead class='background-finances-green'>
          <th><%= Transaction.human_attribute_name :account %></th>
          <th><%= Transaction.human_attribute_name :category %></th>
          <th><%= Transaction.human_attribute_name :value %></th>
          <th><%= Transaction.human_attribute_name :date %></th>
          <th><%= Transaction.human_attribute_name :description %></th>
        </thead>
        <% @transactions.each do |transaction| %>
          <tbody class='border-bottom'>
            <tr>
              <td><%= transaction.account.title %></td>
              <td><%= transaction.category.title %></td>
              <td><%= value_style transaction %></td>
              <td><%= transaction.date %></td>
              <td><%= transaction.description %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
    <div class='container-fluid'>
      <%= paginate @transactions %>
    </div>
  </div>

</div>
<br>
