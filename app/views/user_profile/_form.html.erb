<%= form_with model: @user_profile, local: true do |form| %>
  <%= render "shared/error_messages", resource: @user_profile %>

  <div class='row'>
    <div class='col-md-3' style='margin:auto'>
      <div class='card mb-3'>
        <div class='card-body'>
          <% @avatar = current_profile.avatar.url || 'https://bulma.io/images/placeholders/1280x960.png' %>

          <%= image_tag(@avatar, size:"192x192", class:"img-circle profile_img") %>
        </div>
      </div>
    </div>

    <div class='col-md-9'>
      <div class='card'>
        <div class='card-body'>
          <div class='form-group'>
            <div class='field'>
              <%= form.label :name %>
              <%= form.text_field :name, class:'form-control' %>
            </div>
          </div>

          <div class='form-group'>
            <div class='field'>
              <%= form.label :email %>
              <%= form.email_field :email, class:'form-control' %>
            </div>
          </div>

          <div class='form-group'>
            <label>Avatar</label>
            <div class='field'>
              <div class='custom-file'>
                <%= form.label :'Escolher arquivo', class:'custom-file-label', for:'customFile' %>
                <%= form.file_field :avatar, class:'custom-file-input', id:'customFile' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <br>

  <div class='btn-group actions'>
    <%= form.submit t('save'), class:'btn btn-primary' %>&nbsp;
    <%= link_to t('back'), dashboard_index_path, class:'btn btn-secondary' %>
  </div>
<% end %>