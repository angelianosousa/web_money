<h2>Minhas conquistas</h2>

<div class='container'>
  <div class='row'>
    <% @user_profile.achievements.each do |achievement| %>
      <div class='col-sm-4'>
        <div class='card border-dark w-100 mb-2'>
          <div class='card-body d-flex flex-row align-items-center'>
            <span class='icon d-inline mb-2' style='font-size: 24px;'>
              <%= fontawesome_icon('', achievement.icon.to_s, 'font-size: 32px') %>
            </span>

            <p class='d-inline ml-2'><%= achievement.description %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>
