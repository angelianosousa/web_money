<%= form_with(model: @category, local: true) do |form| %>
  <%#= render "shared/error_messages", resource: @category %>
    
  <%= form.hidden_field :user_profile_id, value: current_user.user_profile.id %>

  <div class="row">
    <div class="col-md">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class:"form-control" %>
      </div>
    </div>
    <div class='col-md'>
      <div class="form-group">
        <%= form.label :category_type %>
        <%= form.select :category_type, options_for_select(category_type_options_for_select, Category.category_types), {}, {class:"form-control"} %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= form.submit t('save'), class:"btn btn-primary" %>
    <%= link_to t('back'), categories_path, class:'btn btn-secondary' %>
  </div>
<% end %>