$('#newRecipeModal').modal('hide');
$('#newExpenseModal').modal('hide');
$('#paymentModal_<%= @transaction.bill_id %>').modal('hide');
$('#transaction<%= @transaction.account_id %>').html('<%= humanized_money_with_symbol(@transaction.account.price) %>')

