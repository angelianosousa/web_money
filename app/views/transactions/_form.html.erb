<%= form_with(url: url, model: @transaction, local: true) do |form| %>
  <%#= render "shared/error_messages", resource: @transaction %>

  <div class="row">
    <div class="col-md-6 col-xl-6 col-sm-6">
      <div class="form-group">
        <%= form.label :price_cents %>
        <%= form.number_field :price_cents, step: :any, min: 1, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :date %>
        <%= form.date_field :date, class:"form-control", min: Date.today.beginning_of_month %>
      </div>
    </div>
    <div class="col-md-6 col-xl-6 col-sm-6">
      <div class="form-group">
        <%= form.label :category_id %>
        <%= form.select :category_id, category_options_for_select, {}, {class:"form-control"} %>
      </div>
      <div class='form-group'>
        <%= form.label :account_id %>
        <%= form.select :account_id, accounts_options_for_select, {}, { class:'form-control' } %>
      </div>
    </div>
    <div class='col-md-12'>
      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class:"form-control" %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= form.submit t('save'), class:"btn btn-primary" %>
  </div>
<% end %>