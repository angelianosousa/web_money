<nav class="navbar navbar-light navbar-filter">
  <div class='row'>
    <div class='col'>
      <%= search_form_for @q, url: transactions_path, html: { class: 'form-row my-2 my-lg-0' } do |f| %>

        <div class='form-row align-items-center'>
          <div class='form-group col-md-2'>
            <%= f.label :category_id_eq, 'Category', class: 'label-control' %>
            <%= f.select :category_id_eq, options_for_select(Category.pluck(:title, :id)), 
                                                             { include_blank: 'All' },
                                                             { data: { style: 'btn btn-link' },  class: 'custom-select' } %>
          </div>

          <div class='form-group col-md-2'>
            <%= f.label :account_id_in, 'Account', class:'label-control' %>
            <%= f.select :account_id_in, options_for_select(Account.pluck(:title, :id)),
                                                            { include_blank: 'All' },
                                                            { data: { style: 'btn btn-link' },  class: 'custom-select' } %>
          </div>

          <div class='form-group col-md-1'>
            <%= f.label :price, 'Price', class:'label-control' %>
            <%= f.number_field :price_cents_gteq, class:'form-control', in:0..999999, placeholder: 'Min' %>
          </div>

          <div class='form-group col-md-1'>
            <%= f.number_field :price_cents_lteq, class:'form-control', in:0..999999, placeholder: 'Max', style:'margin-top: 25px;' %>
          </div>

          <div class='form-group col-md-2'>
            <%= f.label :date, 'Date', class:'label-control' %>
            <%= f.date_field :date_gteq, class:'form-control' %>
          </div>

          <div class='form-group col-md-2'>
            <%= f.date_field :date_lteq, class:'form-control', style:'margin-top: 25px;' %>
          </div>
          
          <div class='form-group col-md-1 ml-4'>
            <%= f.submit 'Search', class:'btn btn-outline-success btn-round btn-sm px-5 mt-4' %>
            <%= link_to 'Clear', transactions_path, class:'btn btn-outline-info btn-round btn-sm px-5 ml-1' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</nav>
<br>