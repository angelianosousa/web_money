<%= form_with(model: @plan, local: true, class: 'form') do |form| %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :date_limit %>
    <%= form.date_select :date_limit, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit t('save'), class: 'btn btn-primary' %>
    <%= link_to t('back'), plans_path, class:'btn btn-secondary' %>
  </div>
<% end %>
