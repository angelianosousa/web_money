<!-- Modal -->
<div class="modal fade" id="newAccountModal" tabindex="-1" role="dialog" aria-labelledby="newAccountModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newAccountModalLabel"><%= t '.title' %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(url: dashboard_create_account_path, model: @account, local: true) do |form| %>

          <%= form.hidden_field :user_profile_id, value: current_user.user_profile.id %>

          <div class='form-group'>
            <div class="field">
              <%= form.label :title %>
              <%= form.text_field :title, class:'form-control' %>
            </div>
          </div>

          <div class='form-group'>
            <div class="field">
              <%= form.label :price_cents %>
              <%= form.number_field :price_cents, step: :any, min: 1, class:'form-control' %>
            </div>
          </div>

          <div class="actions">
            <%= form.submit t('.save'), class:'btn btn-primary' %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>