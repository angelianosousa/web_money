<nav id="sidebar">
  <a id="dismiss">
    <i class="fa fa-arrow-left"></i>
  </a>

  <div class="sidebar-header">
    <%= link_to '', dashboard_index_path, class:"logo-style-dashboard site_title" %>
  </div>

  <ul class="list-unstyled components">
    <li class='<%= 'active' if params[:controller] == 'dashboard' %>'>
      <%= link_to dashboard_index_path do %>
        <i class="fa-solid fa-pie-chart"></i> <%= t '.dashboard' %>
      <% end %>
    </li>
    <li class='<%= 'active' if params[:controller] == 'accounts' %>'>
      <%= link_to accounts_path do %>
        <i class='fa fa-bank' style='text-align:left;'></i> <%= t '.accounts' %>
      <% end %>
    </li>
    <li class='<%= 'active' if params[:controller] == 'transactions' %>'>
      <%= link_to transactions_path do %>
        <i class='fa-solid fa-money-bill-transfer' style='text-align:left;'></i> <%= t '.transactions' %>
      <% end %>
    </li>
    <li class='<%= 'active' if params[:controller] == 'categories' %>'>
      <%= link_to categories_path do %>
        <i class='fa-solid fa-list-ol' style='text-align:left;'></i> <%= t '.categories' %>
      <% end %>
    </li>
    <li class='<%= 'active' if params[:controller] == 'budgets' %>'>
      <%= link_to budgets_path do %>
        <i class='fa-solid fa-piggy-bank' style='text-align:left;'></i> <%= t '.budgets' %>
      <% end %>
    </li>
    <li class='<%= 'active' if params[:controller] == 'bills' %>'>
      <%= link_to bills_path do %>
        <i class='fa fa-refresh' style='text-align:left;'></i> <%= t '.bills' %>
      <% end %>
    </li>
  </ul>
</nav>

<script type="text/javascript">
  $(document).ready(function () {
    $("#sidebar").mCustomScrollbar({
      theme: "minimal"
    });

    $('#sidebarCollapse').on('click', function () {
      // open sidebar
      $('#sidebar').addClass('active');
      // fade in the overlay
      $('.overlay').addClass('active');
      $('.collapse.in').toggleClass('in');
      $('a[aria-expanded=true]').attr('aria-expanded', 'false');
    });

    $('#dismiss, .overlay').on('click', function () {
      // hide sidebar
      $('#sidebar').removeClass('active');
      // hide overlay
      $('.overlay').removeClass('active');
    });
  });
</script>
