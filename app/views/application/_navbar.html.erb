<!-- top navigation -->
<div class="top_nav">
  <div class="nav_menu">
    <nav class="nav navbar-nav">
      <ul class=" navbar-right">
        <li class="nav-item dropdown open" style="padding-left: 15px;">
          <a href="javascript:;" class="user-profile dropdown-toggle" aria-haspopup="true" id="navbarDropdown" data-toggle="dropdown" aria-expanded="false">
            <%= image_tag("user-profile-icon.png", size: '10x10') %>
            <%= current_user.email %>
          </a>
          <div class="dropdown-menu dropdown-usermenu pull-right" aria-labelledby="navbarDropdown">
            <%= link_to edit_user_profile_path(current_user), class:"dropdown-item" do %>
              <i class="fa fa-user pull-right"></i><%= t '.notifications.profile' %>
            <% end %>

            <%= link_to destroy_user_session_path, method: :delete, data: {confirm: "#{t '.notifications.confirm'}" }, class:"dropdown-item" do %>
              <i class="fa fa-sign-out pull-right"></i><%= t '.notifications.sign_out' %>
            <% end %>
          </div>
        </li>
        <li role="presentation" class="nav-item dropdown open">
          <% @notifications_unread = Notification.unread(current_user.user_profile) %>
          <a href="javascript:;" class="dropdown-toggle info-number" id="navbarDropdown1" data-toggle="dropdown" aria-expanded="false">
            <i class="fa fa-envelope-o"></i>
            <span class="badge bg-green"><%= @notifications_unread.count %></span>
          </a>
          <ul class="dropdown-menu list-unstyled msg_list" role="menu" aria-labelledby="navbarDropdown1">
            <% unless @notifications_unread.nil? %>
              <% @notifications_unread.each do |notification| %>
                <li class="nav-item">
                  <div class="dropdown-item">
                    <span class="icon"><i class='fa fa-warning text-danger'></i></span>
                    <span>
                      <span><strong><%= notification.title %></strong></span>
                    </span><br>
                    <span class="message">
                      <%= notification.description %><br>
                    </span>
                    <%= link_to t '.notifications.check', path(notification), method: :patch %>
                  </div>
                </li>
              <% end %>
            <% else %>
              <li class="nav-item">
                <div class="dropdown-item text-center">
                  <span class="message">
                    <%= t '.theres_no_message' %>
                  </span>
                </div>
              </li>
            <% end %>
            
            <li class="nav-item">
              <div class="text-center">
                <a class="dropdown-item">
                  <strong><%= link_to t('.notifications.see_all'), notifications_path %></strong>
                  <i class="fa fa-angle-right"></i>
                </a>
              </div>
            </li>
          </ul>
        </li>

      </ul>
    </nav>
  </div>
</div>
<!-- /top navigation -->