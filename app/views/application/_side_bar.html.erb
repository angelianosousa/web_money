<div class="col-md-3 left_col menu_fixed">
  <div class="left_col scroll-view">
    <div class="navbar nav_title">
      <%= link_to dashboard_index_path, class:"logo-style-dashboard site_title" do %>
        
      <% end %>
    </div>

    <div class="clearfix"></div>

    <!-- menu profile quick info -->
    <div class="profile clearfix">
      <div class="profile_pic">
        <%= current_user_profile.avatar.attached? ? image_tag(current_user_profile.avatar, size: '50x50', class:"img-circle profile_img") : image_tag("user-profile-icon.png", size: '50x50', class:"img-circle profile_img") %>
      </div>
      <div class="profile_info mt-2" style='line-height: 2px;'>
        <p style='color:#fff;'><%= t '.greetings' %></p>
        <p style='color:#fff;'><%= current_user_profile.name rescue nil %></p>
      </div>
    </div>
    <!-- /menu profile quick info -->
    <div class='clearfix'></div>
    <br />

    <!-- sidebar menu -->
    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
      <div class="menu_section">
        <h3><%= t '.menu_title' %></h3>
        <ul class="nav side-menu">
          <li>
            <%= link_to dashboard_index_path do %>
              <i class="fa fa-bar-chart"></i> <%= t '.dashboard' %>
            <% end %>
          </li>
        </ul>
        <ul class="nav side-menu">
          <li><a><i class="fa fa-bank"></i> <%= t '.my_money' %> <span class="fa fa-chevron-down"></span></a>
            <ul class="nav child_menu">
              <li>
                <%= link_to accounts_path do %>
                  <i class='fa fa-calculator' style='text-align:left;'></i> <%= t '.accounts' %>
                <% end %>
              </li>
              <li>
                <%= link_to transactions_path do %>
                  <i class='fa fa-exchange' style='text-align:left;'></i> <%= t '.transactions' %>
                <% end %>
              </li>
              <li>
                <%= link_to categories_path do %>
                  <i class='fa fa-list' style='text-align:left;'></i> <%= t '.categories' %>
                <% end %>
              </li>
              <li>
                <%= link_to bills_path do %>
                  <i class='fa fa-balance-scale' style='text-align:left;'></i> <%= t '.bills' %>
                <% end %>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
    <!-- /sidebar menu -->
  </div>
</div>