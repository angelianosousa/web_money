<div id="budget-<%= budget.id %>" class="collapse" aria-labelledby="budget-<%= budget.id %>" data-parent="#accordionBudget">
  <div class='row mt-2' data-spy="scroll" data-target=".collapse" data-offset="0">
    <% budget.transactions.each do |transaction| %>
      <div class='col-md-3'>
        <div class='card border-dark my-2 py-0'>
          <div class='card-body'>
            <div class='d-flex flex-row justify-content-between'>
              <p class='text-truncate' style='max-width: 200px;'><%= transaction.description %></p>

              <%= render 'transactions/actions', transaction: transaction %>
            </div>
            <div class='d-flex flex-row justify-content-between align-items-center'>
              <div class='mb-0'>
                <p class='mb-0' style='font-size: 20px;'><%= value_style(transaction) %></p>
                <p><%= I18n.l transaction.date, format: :short %></p>
              </div>

              <div class='pull-right'>
                <span class='badge badge-info p-2'><%= transaction.category.title %></span>
                <span class='badge badge-secondary p-2'><%= transaction.account.title %></span>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
