<%= form_with(model: budget, url: url, local: local, class: 'form') do |form| %>

  <div class="form-group">
    <%= form.label :objective_name, class: 'label-control' %>
    <%= form.text_field :objective_name, class: 'form-control', placeholder: 'Ex: Reserva de EmergÃªncia' %>
  </div>

  <div class="form-group">
    <%= form.label :goals_price_cents, class: 'label-control' %>
    <%= form.number_field :goals_price_cents, step: :any, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :date_limit, class: 'label-control' %>
    <%= form.datetime_field :date_limit, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit t('save'), class: 'btn btn-primary' %>
    <%= link_to t('back'), budgets_path, class:'btn btn-secondary' %>
  </div>
<% end %>
