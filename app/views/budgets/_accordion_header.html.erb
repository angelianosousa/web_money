<div class='card'>
  <div class="card-header d-flex flex-row justify-content-between bg-web-money-green py-0" id="budget-<%= budget.id %>">
    <div class='d-flex flex-row justify-content-left align-items-center'>
      <div class='d-flex flex-column'>
        <h2 class="mb-0">
          <%= link_to '#', class: 'text-white btn btn-link', data: { toggle: 'collapse', target: "#budget-#{ budget.id }" }, aria: { expanded: 'true', controls: "budget-#{ budget.id }" } do %>
            <%= budget.title %>
          <% end %>
        </h2>

        <div class="progress mb-2">
          <div class="progress-bar bg-info <%= budget.progress.round(2) == 0 ? 'text-dark' : 0 %>" role="progressbar" style="width: <%= budget.progress.round(2) %>%;" aria-valuenow="<%= budget.progress.round(2) %>" aria-valuemin="0" aria-valuemax="<%= budget.progress.round(2) %>">
            <%= budget.progress.round(2) %>% Alcan√ßado
          </div>
        </div>
      </div>
    </div>

    <div class='d-flex flex-row justify-content-right align-items-center'>
      <%= render 'actions', budget: budget %>
    </div>
  </div>

</div>